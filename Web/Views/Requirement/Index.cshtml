@{
    ViewData["Title"] = "需求管理";
}
@model Web.ParamModels.Requirement.Requirement_Index
<div class="context_box">
    <div class="searchbox" data-tag="reqM">
        <div class="ui form mini">
            <div class="inline fields">
                <div class="field">
                    <label>关联</label>
                    <div class="ui selection dropdown  clearable" style="min-width:115px !important;">
                        <input type="hidden" id="Tag" value="@Model.Tag">
                        <i class="dropdown icon"></i>
                        <div class="default text"></div>
                        <div class="menu">
                            <div class="item" data-value="1">由我创建</div>
                            <div class="item" data-value="2">由我评审</div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label>模块</label>
                    <div class="ui selection dropdown  clearable" style="min-width:115px !important;">
                        <input type="hidden" id="ModuleID" value="@Model.ModuleID">
                        <i class="dropdown icon"></i>
                        <div class="default text"></div>
                        <div class="menu">
                            @foreach (var item in Model.Modules)
                            {
                                <div class="item" data-value="@item.ModuleID">@item.ModuleName</div>
                            }
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label>状态</label>
                    <SelectEnum ID="Status" Default="Model.Status" Width="90" Enum="typeof(DBEnums.RequirementStatus)" Clearable="true"></SelectEnum>
                </div>
                <div class="field">
                    <label>关键字</label>
                    <div class="ui input clearable">
                        <input type="text" id="KeyWord" value="@Model.KeyWord">
                        <i class="close icon"></i>
                    </div>
                </div>
                <div class="field">
                    <button class="ui button orange mini icon" id="search"><i class="icon search"></i></button>
                </div>
                <div class="field right">
                    <a class="ui floating teal labeled icon button tiny" href="/Requirement/View?TP=0">
                        <i class="plus icon"></i>新增
                    </a>
                </div>
            </div>
        </div>
    </div>
    <table class="ui table compact selectable ">
        <thead>
            <tr>
                <th width="50">ID</th>
                <th>标题</th>
                <th width="200">模块</th>
                <th width="100">状态</th>
                <th width="150">评审人</th>
                <th width="150">创建人</th>
                <th width="150">创建时间</th>
                <th width="220" class="right aligned">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.List)
            {
                <tr>
                    <td>@item.RequirementID</td>
                    <td>
                        @switch (item.EmergencyLevel)
                        {
                            case 1:
                                <i class="star icon teal"></i>
                                break;
                            case 2:
                                <i class="star icon blue"></i>
                                break;
                            case 3:
                                <i class="star icon violet"></i>
                                break;
                            case 4:
                                <i class="star icon purple"></i>
                                break;
                            case 5:
                                <i class="star icon red"></i>
                                break;
                        }
                        <a style="font-weight:bold;font-size:14px;">@item.Title</a>
                        <div class="ui mini label horizontal basic">
                            @item.NowVersion
                        </div>
                    </td>
                    <td>
                        <div class="ui mini label">
                            @item.Module.ModuleName
                        </div>
                    </td>
                    <td>
                        <div class="ui mini label green">
                            @item.Status.ToString()
                        </div>
                    </td>
                    <td>
                        <div class="ui image label small blue">
                            <img src="@item.AuditorUser.Avatar">
                            @item.AuditorUser.UserName
                        </div>
                    </td>
                    <td>
                        <div class="ui image label small teal">
                            <img src="@item.CreateUser.Avatar">
                            @item.CreateUser.UserName
                        </div>
                    </td>
                    <td>@item.CreateDate</td>
                    <td class="right aligned">
                        <div class="ui blue icon buttons mini">
                            <a class="ui button" href="/Requirement/View?TP=1&RequirementID=@item.RequirementID">
                                <i class="file alternate outline icon"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <Paging TotalCount="Model.TotalCount" Page="Model.Page" PageSize="Model.PageSize" LeftColspan="4" RightColspan="4"></Paging>
            </tr>
        </tfoot>
    </table>
</div>