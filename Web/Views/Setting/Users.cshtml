@{
    ViewData["Title"] = "用户管理";
}
@model Setting.UsersList
<div class="searchbox">
    <div class="ui form tiny">
        <div class="inline fields">
            <div class="field">
                <label>角色</label>
                <SelectRoles Width="140" ID="RoleID" Fluid="false" Default="Model.RoleID"></SelectRoles>
            </div>
            <div class="field">
                <label>状态</label>
                <div class="ui selection dropdown clearable" style="width:100px !important;">
                    <input type="hidden" id="Enable" value="@Model.Enable?.ToString()">
                    <i class="dropdown icon"></i>
                    <div class="default text"></div>
                    <div class="menu">
                        <div class="item" data-value="True">正常</div>
                        <div class="item" data-value="False">禁用</div>
                    </div>
                </div>
            </div>
            <div class="field">
                <label>关键字</label>
                <div class="ui input clearable">
                    <input type="text" id="KeyWord" value="@Model.KeyWord">
                    <i class="close icon"></i>
                </div>
            </div>
            <div class="field">
                <button class="ui button orange mini icon" id="search"><i class="icon search"></i></button>
            </div>
            <div class="field right">
                <div class="ui floating teal labeled icon button tiny" onclick="modal.load('/Setting/Users_Add',350)">
                    <i class="plus icon"></i>新增
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .newcards { display: grid; grid-template-columns: repeat(auto-fill, 220px); }
    .newcards > .card { overflow: hidden; height: 80px; width: 210px; border: solid 1px rgba(0, 0, 0, .1); margin: 5px; border-radius: 4px; }
    .newcards > .card > img { width: 80px; display: inline-block; float: left; cursor: pointer; border-right: solid 1px rgba(0, 0, 0, .1); }
    .newcards > .card > .info { width: 128px; height: 80px; float: left; padding: 5px; }
</style>
<div class="Context_Scroll">
    <div class="newcards" style="">
        @foreach (var item in Model.List)
        {
            <div class="card">
                <img src="@item.Avatar" onclick="modal.load('/Setting/Users_Add?UserID=@item.UserID',350)" />
                <div class="info">
                    <div>
                        @if (item.Enable)
                        {
                            <div class="ui mini label green horizontal">
                                正常
                            </div>
                        }
                        else
                        {
                            <div class="ui mini label red horizontal">
                                禁用
                            </div>
                        }
                        <span style="font-weight:bold;">@item.UserName</span>
                    </div>
                    <div style="font-size:12px;color:#757575;">
                        @item.Account
                    </div>
                    <div style="margin-top:6px;">
                        <div class="ui mini label horizontal">
                            @item.Role.RoleName
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>