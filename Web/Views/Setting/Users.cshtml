@{
    ViewData["Title"] = "用户管理";
}
@model Setting.UsersList
<div class="searchbox">
    <div class="ui form tiny">
        <div class="inline fields">
            <div class="field">
                <label>角色</label>
                <SelectRoles Width="140" ID="RoleID" Fluid="false" Default="Model.RoleID"></SelectRoles>
            </div>
            <div class="field">
                <label>状态</label>
                <div class="ui selection dropdown clearable" style="width:100px !important;">
                    <input type="hidden" id="Enable" value="@Model.Enable?.ToString()">
                    <div class="default text"></div>
                    <div class="menu">
                        <div class="item" data-value="True">正常</div>
                        <div class="item" data-value="False">禁用</div>
                    </div>
                </div>
            </div>
            <div class="field">
                <label>关键字</label>
                <div class="ui input clearable">
                    <input type="text" id="KeyWord" value="@Model.KeyWord">
                    <i class="close icon"></i>
                </div>
            </div>
            <div class="field">
                <button class="ui button orange icon" id="search"><i class="icon search"></i></button>
            </div>
            <div class="field right">
                <div class="ui floating teal labeled icon button tiny" onclick="modal.load('/Setting/Users_Add',340)">
                    <i class="plus icon"></i>新增
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .newcards { display: grid; grid-template-columns: repeat(auto-fill, 200px); }
    .newcards > .card { overflow: hidden; height: 70px; width: 190px; border: solid 1px #e2e2e2; margin-bottom: 10px; border-radius: 4px; cursor: pointer; }
    .newcards > .card.disable { filter: grayscale(100%); }
    .newcards > .card:hover { box-shadow: 0 0 5px #cacaca; }
    .newcards > .card > img { width: 70px; display: inline-block; float: left; border-right: solid 1px rgba(0, 0, 0, .1); }
    .newcards > .card > .info { width: 116px; height: 50px; float: left; padding: 5px; }
</style>
<div class="Context_Scroll">
    <div class="newcards">
        @foreach (var item in Model.List)
        {
            <div class="card@(!item.Enable?" disable":"")" onclick="modal.load('/Setting/Users_Add?UserID=@item.UserID',340)">
                <img src="@item.Avatar" />
                <div class="info">
                    <div style="font-weight:bold;">
                        @item.UserName
                    </div>
                    <div style="font-size:12px;color:#757575;">
                        @item.Account
                    </div>
                    <div class="ui mini label horizontal">
                        @item.Role.RoleName
                    </div>
                </div>
            </div>
        }
    </div>
</div>