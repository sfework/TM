@{
    ViewData["Title"] = "用户管理";
}
@model Setting.UsersManagementList
<style>
    body { display: flex; flex-direction: column; overflow:hidden;}
    .Context { flex: 1;overflow-y:scroll; }
    .Context::-webkit-scrollbar { width: 12px; }
    .Context::-webkit-scrollbar-thumb { border-radius: 0px; cursor: pointer; }
</style>
<div class="context_box">
    <div class="searchbox">
        <div class="ui form mini">
            <div class="inline fields">
                <div class="field">
                    <label>角色</label>
                    <RoleSelect Width="140" ID="RoleID" Default="Model.RoleID"></RoleSelect>
                </div>
                <div class="field">
                    <label>状态</label>
                    <div class="ui selection dropdown clearable" style="width:90px !important;">
                        <input type="hidden" id="Enable" value="@Model.Enable?.ToString()">
                        <i class="dropdown icon"></i>
                        <div class="default text"></div>
                        <div class="menu">
                            <div class="item" data-value="True">正常</div>
                            <div class="item" data-value="False">禁用</div>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label>关键字</label>
                    <div class="ui input clearable">
                        <input type="text" id="KeyWord" value="@Model.KeyWord">
                        <i class="close icon"></i>
                    </div>
                </div>
                <div class="field">
                    <button class="ui button orange mini icon" id="search"><i class="icon search"></i></button>
                </div>
                <div class="field right">
                    <div class="ui floating teal labeled icon button tiny" onclick="modal.load('/Setting/Users_Add',350)">
                        <i class="plus icon"></i>新增
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="ui table compact selectable ">
        <thead>
            <tr>
                <th width="50">ID</th>
                <th width="80">头像</th>
                <th width="150">姓名</th>
                <th width="150">账号</th>
                <th width="150">角色</th>
                <th width="150">状态</th>
                <th>最后登录</th>
                <th class="right aligned">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.List)
            {
                <tr>
                    <td><span class="ui text grey horizontal">#@item.UserID</span></td>
                    <td><img width="28" src="@item.Avatar" class="ui rounded image"></td>
                    <td>@item.UserName</td>
                    <td>@item.Account</td>
                    <td>
                        <i class="user tag icon grey"></i>
                        @item.Role.RoleName
                    </td>
                    <td>
                        @if (item.Enable)
                        {
                            <div class="ui mini label green horizontal">
                                正常
                            </div>
                        }
                        else
                        {
                            <div class="ui mini label red horizontal">
                                禁用
                            </div>
                        }
                    </td>
                    <td><i class="clock outline icon grey"></i>@item.LastLoginDate</td>
                    <td class="right aligned">
                        <div class="ui blue icon buttons mini">
                            <button class="ui button" onclick="modal.load('/Setting/Users_Add?UserID=@item.UserID',350)">
                                <i class="edit icon"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <Paging TotalCount="Model.TotalCount" Page="Model.Page" PageSize="Model.PageSize" LeftColspan="4" RightColspan="4"></Paging>
            </tr>
        </tfoot>
    </table>
</div>
